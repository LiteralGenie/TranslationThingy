#: import FONT_1_REGULAR utils.FONT_1_REGULAR
#: import ScrollEffect kivy.effects.scroll.ScrollEffect

#: set FOCUS_COLOR [1,0,0,1]
#: set FADE_TIME 2
#: set FADE_CYCLES 3

<Row>: # BoxLayout
    height: self.minimum_height
    orientation: "horizontal"
    size_hint_y: None

    num: num
    kor: kor
    eng: eng


    RowLabel:
        id: num
        text: str(self.parent.row_index)
    KorInput:
        id: kor
        height: max(self.minimum_height, eng.minimum_height)
    EngInput:
        id: eng
        height: max(self.minimum_height, kor.minimum_height)

<TranslationTable>: # ScrollView
    layout: layout

    scroll_type: ['bars', 'content']
    effect_y: ScrollEffect(friction=0.2)

    do_scroll_x: False
    smooth_scroll_end: 300
    scroll_distance: 1          # Low drag distance before scroll begins
    scroll_wheel_distance: 10

    bar_width: 20
    bar_color: [.5,.5,.5,.5]
    bar_inactive_color: [.5,.5,.5,.1]

    BoxLayout:
        size_hint: 1, None
        height: self.minimum_height
        id: layout
        orientation: "vertical"

        # Header
        BoxLayout:
            id: header
            orientation: "horizontal"
            size_hint_y: None
            height: 50

            RowLabel:
                text: ""
            HeaderLabel:
                text: "Korean"
            HeaderLabel:
                text: "English"

<KorInput>:
    font_name: FONT_1_REGULAR
    text_language: "ko-KR"
    halign: "left"
    write_tab: False

<EngInput>:
    font_name: FONT_1_REGULAR
    text_language: "en_US"
    halign: "left"
    write_tab: False

<RowLabel>:
    size_hint_max_x: 75
    text_size: self.size
    text_language: "en_us"
    halign: "center"
    valign: "middle"

    focus_color: FOCUS_COLOR
    fade_time: FADE_TIME
    fade_cycles: FADE_CYCLES

    r: 1
    g: 1
    b: 1
    a: 1
    color: [self.r, self.g, self.b, self.a]

<HeaderLabel>:
    text_language: "en_us"
    halign: "center"