#: import Viewer kivy_utils.viewer
#: import TranslationTable kivy_utils.TranslationTable
#: import VocabPanel kivy_utils.VocabPanel

#:set FOCUS_BOX_COLOR [0.5,0,0.5, 1]

BoxLayout:
    orientation: "horizontal"

    focus_box_color: FOCUS_BOX_COLOR

    Viewer:
        id: viewer
    BoxLayout:
        id: right_layout
        orientation: "vertical"


        # TL table
        BoxLayout:
            orientation: "vertical"
            padding: [0, 10, 10, 10]

            TranslationTable:
                id: tl_table

            BoxLayout:
                id: TableButtons
                size_hint_y: 0.1
                orientation: "horizontal"

                Label:
                ToggleButton:
                    text: "b1"
                    size_hint_x: 0.1
                Button:
                    text: "b2"
                    size_hint_x: 0.1


        VocabPanel:
            id: vocab_panel