#: import FONT_PATH utils.FONT_PATH
#: import ScrollEffect kivy.effects.scroll.ScrollEffect

<Row>: # BoxLayout
    height: 100
    orientation: "horizontal"

<TranslationTable>: # ScrollView
    layout: layout

    scroll_type: ['bars', 'content']
    effect_y: ScrollEffect(friction=0.2)

    do_scroll_x: False
    smooth_scroll_end: 300
    scroll_distance: 1          # Low drag distance before scroll begins
    scroll_wheel_distance: 10

    bar_width: 20
    bar_color: [.5,.5,.5,.5]
    bar_inactive_color: [.5,.5,.5,.1]

    BoxLayout:
        size_hint: 1, None
        height: root.row_height*len(root.rows)
        id: layout
        orientation: "vertical"

        # Header
        BoxLayout:
            id: header
            orientation: "horizontal"

            RowLabel:
                text: ""
            HeaderLabel:
                text: "Korean"
            HeaderLabel:
                text: "English"

<KorInput>:
    font_name: FONT_PATH
    text_language: "ko-KR"
    halign: "left"
    write_tab: False

<EngInput>:
    text_language: "en_US"
    halign: "left"
    write_tab: False

<RowLabel>:
    size_hint_max_x: 75
    text_size: self.size
    text_language: "en_us"
    halign: "center"
    valign: "middle"

<HeaderLabel>:
    text_language: "en_us"
    halign: "center"